<!DOCTYPE html>
<html>
<head>
  <title>Intranet</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :all %>
  <%= csrf_meta_tag %>
  <link href="/favicon.ico" type="image/x-icon" rel="icon">
</head>
<body>
<div id="container">
    <div id="header">

        <!--<h1>Intranet da Procuradoria Geral do Município</h1>-->

    </div> <!-- header -->
    <div class="clear"></div>

    <div id="barra_tarefas">

        <div id="menu">
            <%= link_to "Início", home_index_path %>
            <%= link_to "Fichário", fichario_index_index_path %>
            <%= link_to "Usuários", usuarios_lista_path %>
            <%= link_to "Frequência", frequencia_path %>
            <%= link_to "Conhecimento", base_conhecimentos_path %>

            <div class="clear"></div>
        </div>

        <div id="session_info">
          <%= link_to image_tag("/images/icons/status_online.png")+current_usuario.email,
                      edit_usuario_registration_path %>
          <%= link_to image_tag('/images/icons/disconnect.png', :title => 'Logout')+"Logout",
                      destroy_usuario_session_path %>

            <div class="clear"></div>
        </div>

        <div class="clear"></div>

    </div> <!-- barra_tarefas -->
    <div class="clear"></div>

    <div id="main">
      <% if notice or alert %>
        <div class="system_message">
            <% if notice %><div class="success_message"><%= notice %></div> <% end %>
            <% if alert %><div class="error_message"><%= alert %></div> <% end %>
        </div>
      <% end %>
      <% if params.has_key?("flash") %>
        <div class="system_message">
            <div class="error_message"><%= params["flash"] %></div>
        </div>
      <% end %>
    <%= yield %>

    </div> <!-- main -->

    <div id="footer">
				Copyright <%= Time.now.strftime("%Y") %> PGM - Procuradoria Geral do Municipio - Fortaleza, todos os direitos reservados
    </div> <!-- footer -->

</div> <!-- container -->

</body>
</html>