<%= link_to image_tag('/images/icons/add.png')+' Novo Orgão', new_frequencia_orgao_path %><br /><br />

<table class="grid">
  <tr class="grid_title">
    <td colspan="4">Lista de orgãos</td>
  </tr>
  <tr>
    <td class="grid_label center">ID</td>
    <td class="grid_label center">Orgão</td>
    <td class="grid_label center">Descrição</td>
    <td class="grid_label center">Ações</td>
  </tr>

<% @frequencia_orgaos.each do |frequencia_orgao| %>
  <tr>
    <td class="grid_value"><%= frequencia_orgao.id %></td>
    <td class="grid_value"><%= frequencia_orgao.orgao %></td>
    <td class="grid_value"><%= frequencia_orgao.descricao %></td>
    <td class="grid_action">
        <%= link_to image_tag("/images/icons/lupa.png",   :title => 'Mostrar'), frequencia_orgao %>
        <%= link_to image_tag("/images/icons/editar.png", :title => 'Editar'), edit_frequencia_orgao_path(frequencia_orgao) %>
        <%= link_to image_tag("/images/icons/delete.png", :title => 'Apagar'), frequencia_orgao, :confirm => 'Você tem certeza?', :method => :delete %>
    </td>
  </tr>
<% end %>
  <% if paginacao = will_paginate(@frequencia_orgaos, :previous_label => "< Anterior", :next_label => "Próximo")  %>
  <tr>
    <td class="grid_action center" colspan="4" style="text-align: center;">
      <%= paginacao %>
    </td>
  </tr>
  <% end %>
  <tr>
    <td class="grid_footer" colspan="4"><%= raw "<strong>Total:</strong> #{@total}" %></td>
  </tr>
</table>
