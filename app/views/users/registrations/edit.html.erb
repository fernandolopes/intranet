<div style="background-color: white; left:400px; padding:50px; position:absolute; top:90px; width:500px;">
    <h2>Editar <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
        <%= devise_error_messages! %>

        <p><%= f.label :nome %><br />
        <%= f.text_field :nome %></p>

				<%# if can? :update, @user %>
		    <!-- <p><%#= f.label :matricula, "Matrícula" %><br /> -->
		    <!-- <%#= f.text_field :matricula %></p> -->
				<%# end %>

        <p><%= f.label :email %><br />
        <%= f.text_field :email %></p>

				<%# if can? :update, @user %>
		    <!-- <p><%#= f.label :setor_id %><br /> -->
		    <!-- <%#= f.select :setor_id, Frequencia::Setor.all.collect{ |c| [c.setor, c.id]}, :prompt => "Selecione um setor" %></p> -->
				<%# end %>

				<%# if can? :update, @user %>
		    <!-- <p><%#= f.label :profissao_id, "Profissão" %><br /> -->
		    <!-- <%#= f.select :profissao_id, Frequencia::Profissao.all.collect{ |c| [c.profissao, c.id]}, :prompt => "Selecione uma profissão" %></p> -->
				<%# end %>

        <p><%= f.label :password, "Senha" %> <i>(deixe em branco se você não quiser alterá-la)</i><br />
        <%= f.password_field :password %></p>

        <p><%= f.label :password_confirmation, "Confirme a Senha" %><br />
        <%= f.password_field :password_confirmation %></p>

        <p><%= f.label :current_password, "Senha atual" %> <i>(precisamos de sua senha atual para confirmar as alterações)</i><br />
        <%= f.password_field :current_password %></p>

				<%# if can? :update, @user %>
				<!-- <%#= f.collection_select :role, User::ROLES, :to_s, :humanize %> -->
				<%# end %>

        <p><%= f.submit "Atualizar" %></p>
    <% end %>

