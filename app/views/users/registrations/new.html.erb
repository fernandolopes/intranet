<div style="background-color: white; left:400px; padding:50px; position:absolute; top:90px; width:500px;">
    <h2>Registrar Usuário</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <p><%= f.label :nome %><br />
        <%= f.text_field :nome %></p>

        <p><%= f.label :matricula, "Matrícula" %><br />
        <%= f.text_field :matricula %></p>

        <p><%= f.label :email %><br />
        <%= f.text_field :email %></p>

        <p><%= f.label :setor_id %><br />
        <%= f.select :setor_id, Frequencia::Setor.all.collect{ |c| [c.setor, c.id]}, :prompt => "Selecione um setor" %></p>

         <p><%= f.label :profissao_id, "Profissão" %><br />
        <%= f.select :profissao_id, Frequencia::Profissao.all.collect{ |c| [ c.profissao, c.id]}, :prompt => "Selecione uma profissão" %></p>

        <p><%= f.label 'tipo_de_contratacao_id' %><br />
        <%= f.select 'tipo_de_contratacao_id', Frequencia::TipoDeContratacao.all.collect{ |c| [ c.titulo, c.id ]}, :prompt => "Selecione um tipo de contratação"%></p>

        <p><%= f.label :password, "Senha" %><br />
        <%= f.password_field :password %></p>

        <p><%= f.label :password_confirmation, "Confirmar Senha" %><br />
        <%= f.password_field :password_confirmation %></p>

        <%= f.collection_select :role, User::ROLES, :to_s, :humanize %>

        <p><%= f.submit "Salvar" %></p>
    <% end %>

    <%= link_to "Voltar", ' lista' %>
</div>
